#!/bin/bash

# Gives hacker sudo access to elegant_curve.py and to use python with elegant_curve.py
echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/elegant_curve.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python elegant_curve.py" > /etc/sudoers.d/hacker

# Changes permissions of elegant_curve.py to allow hacker to run it as root
chmod 0440 /etc/sudoers.d/hacker

# Changes permissions of sudo to allow hacker to run it as root only for elegant_curve.py
chmod 4755 /usr/bin/sudo
