#!/bin/bash

echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/canis-lupus-familiaris-bernardus.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python canis-lupus-familiaris-bernardus.py" > /etc/sudoers.d/hacker

chmod 0440 /etc/sudoers.d/hacker

chmod 4755 /usr/bin/sudo

