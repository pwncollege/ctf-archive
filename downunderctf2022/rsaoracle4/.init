#!/bin/bash

git clone https://github.com/josephsurin/lattice-based-cryptanalysis.git
cd lattice-based-cryptanalysis
pip install .

echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/rsa-interval-oracle-iii.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python rsa-interval-oracle-iii.py" > /etc/sudoers.d/hacker

chmod 0440 /etc/sudoers.d/hacker

chmod 4755 /usr/bin/sudo
