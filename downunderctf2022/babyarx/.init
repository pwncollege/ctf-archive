#!/bin/bash

echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/baby-arx.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python baby-arx.py" > /etc/sudoers.d/hacker

chmod 0440 /etc/sudoers.d/hacker

chmod 4755 /usr/bin/sudo

sudo -u root /challenge/baby-arx.py

sudo chmod +x baby-arx.py