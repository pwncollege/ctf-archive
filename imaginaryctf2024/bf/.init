#!/bin/bash

echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/generate.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python generate.py" > /etc/sudoers.d/hacker

chmod 0440 /etc/sudoers.d/hacker

chmod 4755 /usr/bin/sudo

sudo python /challenge/generate.py >> /challenge/bf.txt