#!/bin/bash

echo "hacker ALL=(ALL:ALL) NOPASSWD: /challenge/lwe.py" > /etc/sudoers.d/hacker
echo "hacker ALL=(ALL:ALL) NOPASSWD: /usr/bin/python lwe.py" > /etc/sudoers.d/hacker

chmod 0440 /etc/sudoers.d/hacker

chmod 4755 /usr/bin/sudo

sudo -u root /challenge/lwe.py

sudo chmod +x lwe.py

sudo python /challenge/lwe.py > output.txt
